@using MyCoreApplication.Core
@model BimboProduct

<div>
    <div class="card" style="border-color: black;">
        <div class="panelBackground">
            <div class="row">
                <div class="col-md-6">
                    <img class="card-img-top" src="@Model.ImgUrl" alt="Card image cap" style="width:200px;  height:200px;">
                </div>
                <div class="col-md-6">
                    <p class="card-text price" style="font-size: 60px; color: white;
                    text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">
                        $@Model.Price
                    </p>
                </div>
            </div>
        </div>
        <div class="card-body" style="border-top:1px; border-color: black;">
            <h5 class="card-title">@Model.ProductName</h5>
            <div class="row">
                <div class="col-md-6">
                    <p class="card-text" value="@Model.Price">In the Cart:</p>
                </div>
                <div class="col-md-6">
                    <partial name="_MinusPlusInput" model="@Model" />
                </div>
            </div>
        </div>
    </div>
</div>